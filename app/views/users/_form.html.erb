<%= form_for(@user) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_users.each do |full_user| %>
          <li>
            <%= full_user %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  名前:
  <%= f.text_field :name %>
  
  プロフィール:
  <%= f.text_area :profile %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>